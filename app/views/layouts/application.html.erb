<!DOCTYPE html>
<html>
<head>
  <title>Muselisation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

    <!-- Soundcloud input field -->
	    <div id="playerControls">
	        <form id="form">
	            <input id="input" placeholder="https://soundcloud.com/artist/track">
	            <button type="submit" id="submit"><!-- <i class="icon-play"> --></i></button><br>
	        </form>
	        <audio id="player" controls autoplay preload autobuffer></audio>
	   </div>

	<script src="//connect.soundcloud.com/sdk.js"></script>


</body>
</html>
